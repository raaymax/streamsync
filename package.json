{
  "name": "Streamsync",
  "version": "1.0.0",
  "description": "",
  "workspaces": [
    "cli",
    "ui",
    "e2e",
    "docs"
  ],
  "scripts": {
    "build": "turbo run build",
    "e2e": "turbo run e2e",
    "e2e:ui": "turbo run e2e:ui",
    "lint": "turbo run lint",
		"test": "turbo run build lint test e2e",
    "ui:dev": "turbo ui:dev",
    "ui:preview": "turbo ui:preview",
    "docs:dev": "turbo docs:dev",
    "docs:preview": "turbo docs:preview",

		"test:ci": "npm run -ws test",
		"build:ci": "npm run -ws build",
    "lint:ci": "npm run -ws lint:ci",
    "e2e:firefox:ci": "npm run -w streamsync-e2e e2e:firefox",
    "e2e:chromium:ci": "npm run -w streamsync-e2e e2e:chromium",
    "e2e:webkit:ci": "npm run -w streamsync-e2e e2e:webkit",
    "custom.build:ci": "npm run -w streamsync-ui custom.build"
  },
  "dependencies": {
    "turbo": "1.12.4"
  }
}
